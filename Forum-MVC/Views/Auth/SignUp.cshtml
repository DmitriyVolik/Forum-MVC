@{
  var error = TempData["Error"] as string;
}
<h1>Create your account</h1>
@if (!string.IsNullOrEmpty(error))
{
    <h2 class="alert-danger" style="padding: 20px">@error</h2>
}
<form action="/CreateAccount" class="w-25" method="post">
  <div class="mb-3">
    <label for="InputEmail" class="form-label">Email address</label>
    <input type="email" class="form-control" id="InputEmail" name="email">
  </div>
  <div class="mb-3">
    <label for="InputLogin" class="form-label">Login</label>
    <input minlength="4" maxlength="12" type="text" class="form-control" id="InputLogin" name="login">
  </div>
  <div class="mb-3">
    <label for="InputPassword" class="form-label">Password</label>
    <input minlength="8" maxlength="16" type="password" class="form-control" id="InputPassword" name="password">
  </div>
  <button type="submit" class="btn btn-primary">Create</button>
</form>


